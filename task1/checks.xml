<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
          "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name="Checker">

    <property name="fileExtensions" value="java, properties, xml"/>


    <module name="TreeWalker">

      <module name="BrainMethodIdentityDisharmony ">
              <property name="lengthMax" value="50"/>
              <property name="doCountEmpty" value="true"/>
              
              <property name="cyclomaticComplexityMax" value="8"/>
              <property name="switchBlockAsSingleDecisionPoint" value="false"/>
              
              <property name="nestingLevelMax" value="4"/>
              
              <property name="variableCountMax" value="10"/>
      </module>

    </module>

</module>
